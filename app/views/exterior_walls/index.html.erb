<h1>Listing exterior_walls</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Status</th>
      <th>Construct assembly reference</th>
      <th>Area</th>
      <th>Display perimeter</th>
      <th>Azimuth</th>
      <th>Exterior solar absorptance</th>
      <th>Exterior thermal absorptance</th>
      <th>Exterior visible absorptance</th>
      <th>Interior solar absorptance</th>
      <th>Interior thermal absorptance</th>
      <th>Interior visible absorptance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exterior_walls.each do |exterior_wall| %>
      <tr>
        <td><%= exterior_wall.name %></td>
        <td><%= exterior_wall.status %></td>
        <td><%= exterior_wall.construct_assembly_reference %></td>
        <td><%= exterior_wall.area %></td>
        <td><%= exterior_wall.display_perimeter %></td>
        <td><%= exterior_wall.azimuth %></td>
        <td><%= exterior_wall.exterior_solar_absorptance %></td>
        <td><%= exterior_wall.exterior_thermal_absorptance %></td>
        <td><%= exterior_wall.exterior_visible_absorptance %></td>
        <td><%= exterior_wall.interior_solar_absorptance %></td>
        <td><%= exterior_wall.interior_thermal_absorptance %></td>
        <td><%= exterior_wall.interior_visible_absorptance %></td>
        <td><%= link_to 'Show', exterior_wall %></td>
        <td><%= link_to 'Edit', edit_exterior_wall_path(exterior_wall) %></td>
        <td><%= link_to 'Destroy', exterior_wall, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

