<h1>Listing roofs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Status</th>
      <th>Construct assembly reference</th>
      <th>Area</th>
      <th>Azimuth</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roofs.each do |roof| %>
      <tr>
        <td><%= roof.name %></td>
        <td><%= roof.status %></td>
        <td><%= roof.construct_assembly_reference %></td>
        <td><%= roof.area %></td>
        <td><%= roof.azimuth %></td>
        <td><%= link_to 'Show', roof %></td>
        <td><%= link_to 'Edit', edit_roof_path(roof) %></td>
        <td><%= link_to 'Destroy', roof, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

