<h1>Listing schedule_days</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Hour</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedule_days.each do |schedule_day| %>
      <tr>
        <td><%= schedule_day.name %></td>
        <td><%= schedule_day.type %></td>
        <td><%= schedule_day.hour %></td>
        <td><%= link_to 'Show', schedule_day %></td>
        <td><%= link_to 'Edit', edit_schedule_day_path(schedule_day) %></td>
        <td><%= link_to 'Destroy', schedule_day, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

