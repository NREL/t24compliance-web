<h2>User Account</h2>
<h3 class="edit-name"><%= @user.email %> <% if @user.has_role? :admin %>(admin user)<% end %>
<%= link_to "[ edit account ]", edit_user_registration_path(@user), class: "edit-link" %>
<% if current_user.has_role? :admin %><%= link_to "[ edit roles ]", edit_user_path(@user), class: "edit-link" %><% end %></h3>

<% if current_user.has_role? :admin %><%= link_to 'Admin Tasks', admin_path, class: 'btn btn-success' %></li><% end %>

<h2>Projects</h2>

<%= link_to 'New Project Wizard', wizard_path, class: 'btn btn-primary' %>
<div class="pad-tb-20">
<% if @projects.nil? %>
  <p>You do not have any projects.</p>
<% else %>
  <table class="table table-striped">
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
    <% @projects.each do |p| %>
      <tr>
        <th> <%= p.name %></th>
        <th> <a href="/wizard#/projects/<%= p.id %>">Open in Wizard</a> | <%= link_to 'Download XML', download_project_path(p) %> | <%= link_to 'Delete', p, method: :delete, data: { confirm: 'Are you sure?' } %></th>
      </tr>
    <% end %>
  </table>
<% end %>
</div>
