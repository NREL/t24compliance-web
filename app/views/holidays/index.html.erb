<h1>Listing holidays</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Specification method</th>
      <th>Day of week</th>
      <th>Month</th>
      <th>Day</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @holidays.each do |holiday| %>
      <tr>
        <td><%= holiday.name %></td>
        <td><%= holiday.specification_method %></td>
        <td><%= holiday.day_of_week %></td>
        <td><%= holiday.month %></td>
        <td><%= holiday.day %></td>
        <td><%= link_to 'Show', holiday %></td>
        <td><%= link_to 'Edit', edit_holiday_path(holiday) %></td>
        <td><%= link_to 'Destroy', holiday, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Holiday', new_holiday_path %>
