<h1>Listing underground_floors</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Status</th>
      <th>Construct assembly reference</th>
      <th>Area</th>
      <th>Perimeter exposed</th>
      <th>Interior solar absorptance</th>
      <th>Interior thermal absorptance</th>
      <th>Interior visible absorptance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @underground_floors.each do |underground_floor| %>
      <tr>
        <td><%= underground_floor.name %></td>
        <td><%= underground_floor.status %></td>
        <td><%= underground_floor.construct_assembly_reference %></td>
        <td><%= underground_floor.area %></td>
        <td><%= underground_floor.perimeter_exposed %></td>
        <td><%= underground_floor.interior_solar_absorptance %></td>
        <td><%= underground_floor.interior_thermal_absorptance %></td>
        <td><%= underground_floor.interior_visible_absorptance %></td>
        <td><%= link_to 'Show', underground_floor %></td>
        <td><%= link_to 'Edit', edit_underground_floor_path(underground_floor) %></td>
        <td><%= link_to 'Destroy', underground_floor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

